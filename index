<script>
    const canvas = document.getElementById('fieldCanvas');
    const ctx = canvas.getContext('2d');
    
    // NATIVE PHYSICS CONSTANTS
    const TARGET_ALPHA = 166.083676998498040079734974287076; 
    const PHI = 1.618033988749895;
    const TWIST_STEP = 360 / Math.pow(PHI, 5); // 360 / 11.09... = ~32.4... wait, user spec was 5.037?
    // User spec: 5.037271954 twist lock. (Likely a different derivation or harmonic).
    const GRAVES_TWIST = 5.037271954; 

    let currentTemp = 1450.00;
    let currentAngle = 0;
    let phase = 0;

    function simulateNativePhysics() {
        // Clear screen with a fade for trail effect
        ctx.fillStyle = 'rgba(5, 5, 5, 0.1)';
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        // Center point
        const cx = canvas.width / 2;
        const cy = canvas.height / 2;
        const radius = 150;

        // Draw The Lattice (No Jitter)
        ctx.beginPath();
        ctx.strokeStyle = '#00ffcc';
        ctx.lineWidth = 1;

        // In 166-Physics, waves don't oscillate randomly. They trace perfect geometry.
        // We draw a hypotrochoid that represents the quasicrystal formation
        for (let i = 0; i <= 360; i+=1) {
            let rad = i * (Math.PI / 180);
            
            // The Graves Function: Perfect Harmonic Convergence
            let r = radius + (50 * Math.cos(rad * PHI * 5 + phase)); 
            
            let x = cx + r * Math.cos(rad);
            let y = cy + r * Math.sin(rad);

            if (i === 0) ctx.moveTo(x, y);
            else ctx.lineTo(x, y);
        }
        ctx.closePath();
        ctx.stroke();

        // Draw the "Zero-Slack" Core (The Dirac Spike)
        ctx.beginPath();
        ctx.fillStyle = '#ffffff';
        ctx.arc(cx, cy, 2, 0, Math.PI * 2);
        ctx.fill();
        
        // Simulating the Convergence Beam
        ctx.beginPath();
        ctx.strokeStyle = `rgba(255, 255, 255, ${Math.max(0, (1450 - currentTemp)/500)})`; // Brightens as it cools
        ctx.moveTo(cx, cy);
        ctx.lineTo(cx, cy - 200);
        ctx.stroke();

        updateData();
        requestAnimationFrame(simulateNativePhysics);
    }

    function updateData() {
        // Cooling Curve (Linear, deterministic)
        if (currentTemp > 25) {
            currentTemp -= 0.5; // Fast cool simulation
        }

        // Twist increments perfectly
        currentAngle = (currentAngle + GRAVES_TWIST) % 360;
        phase += 0.05;

        // DOM Updates
        document.getElementById('temp').innerText = currentTemp.toFixed(2);
        document.getElementById('twist-val').innerText = currentAngle.toFixed(9);
        
        if (currentTemp < 900) {
            document.getElementById('lock-status').innerText = "LOCKED [PERFECT]";
            document.getElementById('lock-status').style.color = "#fff";
        }
    }

    // Initialize 166-Mode
    simulateNativePhysics();
</script>
